@model IEnumerable<ElevenNote.Models.CategoryModels.CategoryListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Favorites)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.EditorFor(modelItem => item.Favorites)
        </td>
        <td>
            @Html.ActionLink("Change", "Edit", new { id = item.CategoryId }) |
            @Html.ActionLink("More Info", "Details", new { id = item.CategoryId }) |
            @Html.ActionLink("Remove", "Delete", new { id = item.CategoryId })
        </td>
    </tr>
}

</table>
